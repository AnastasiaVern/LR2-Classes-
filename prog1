#include "stdafx.h"
#include <iostream>
#include <string>
using namespace std;

class Sotrudnik
{   
    friend class FriendSotrudnik;
	    string surname;
	    int  oklad;
	    double more;
    friend void print(const Sotrudnik &x);
	               
public:
	explicit Sotrudnik(int oklad) { oklad = 0; };

	Sotrudnik() 
	{
		surname = "default";
		oklad = 0;
		more = 0;
	};
	Sotrudnik(string& sur, int& s, double& b) 
	{ 
		surname=sur;
	    oklad = s;
	    more = b;
	}
	
double zarplata() const 
    {
		return oklad + (more / 100.);
    };
void print() const
    { 
        cout << "  \n Surname of the epmloyee :\n " << surname;
		cout<< "  \nHis salary: \n " << oklad;
		cout << " \n His bonus:\n " << more;
	};
~Sotrudnik() { cout << " Object destroyed " << endl; };
};

class FriendSotrudnik 
{ 
public: 
void printFriendSotrudnik(const Sotrudnik &y) 
	{
		cout << "Sotrudnik\n\n";
		cout << y.surname;
		cout << y.oklad;
		cout << y.more;
	};
};

void print(const Sotrudnik &x) 
    { 
	cout << x.surname;
	cout << x.oklad;
	cout << x.more;
    }

int main()
{
	Sotrudnik x;
	FriendSotrudnik yfriend;
	int n;
	string sur;
	double b,sum=0;
	int s;
	cout << "Vvedite kol-vo sotrudnikov" << endl;
	cin >> n;
	Sotrudnik **p;
	p = new Sotrudnik*[n];


	for (int i = 0; i < n; i++)
	{    
		cout << "\nEmployee number  " << (i + 1) << "\n" << "Surname please: "<<endl;
		cin.clear();
		cin.ignore(std::numeric_limits<std::streamsize>::max(), '\n');
		getline(cin,sur);
		
		cout << sur;
		cout << "\nHis/her salary: "<<endl;
		cin >> s;
		cout << "\nBonus salary: "<<endl;
		cin >> b;
		p[i] = new Sotrudnik(sur, s, b);
		p[i]->print();
 	};

	for (int j = 0; j < n; j++) sum += p[j]->zarplata();

	cout << "\nTotal Summ = " << sum << endl;
	cout << "\n\n";

	print(x);
	cout << "\n\n";
	yfriend.printFriendSotrudnik(x);

	for (int i = 0; i < n; i++)
	{
		delete[] p[i];
	}
	delete p;
    return 0;
}
